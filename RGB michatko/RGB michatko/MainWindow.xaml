<Window x:Class="RGB_michatko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGB_michatko"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="redSlider" HorizontalAlignment="Left" Margin="454,114,0,0" VerticalAlignment="Top" Width="286" Height="37" Interval="255" IsSnapToTickEnabled="True" SmallChange="1" Maximum="255" ValueChanged="ValueChanged"/>
        <Slider x:Name="greenSlider" HorizontalAlignment="Left" Margin="454,0,0,0" VerticalAlignment="Center" Width="286" Height="38" Interval="255" IsSnapToTickEnabled="True" SmallChange="1" Maximum="255" ValueChanged="ValueChanged"/>
        <Slider x:Name="blueSlider" HorizontalAlignment="Left" Margin="454,281,0,0" VerticalAlignment="Top" Width="286" Height="37" Interval="255" IsSnapToTickEnabled="True" SmallChange="1" Maximum="255" ValueChanged="ValueChanged"/>
        <Label Content="Red" HorizontalAlignment="Left" Margin="454,70,0,0" VerticalAlignment="Top" Width="43" Background="Red"/>
        <Label Content="Green" HorizontalAlignment="Left" Margin="454,151,0,0" VerticalAlignment="Top" Width="43" Background="Green"/>
        <Label Content="Blue" HorizontalAlignment="Left" Margin="454,241,0,0" VerticalAlignment="Top" Width="43" Background="Blue"/>
        <TextBox Name="redBox" HorizontalAlignment="Left" Margin="502,76,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="48" TextChanged="TextChanged"/>
        <TextBox Name="greenBox" HorizontalAlignment="Left" Margin="502,156,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="48" TextChanged="TextChanged"/>
        <TextBox Name="blueBox" HorizontalAlignment="Left" Margin="502,245,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="48" TextChanged="TextChanged"/>
        <Rectangle Name="rectangle" HorizontalAlignment="Left" Height="202" Margin="115,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="213" RadiusX="0" RadiusY="0"/>

    </Grid>
</Window>
